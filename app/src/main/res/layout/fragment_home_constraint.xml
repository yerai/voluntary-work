<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



                <LinearLayout
                    android:id="@+id/profile_card_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/profile_round" />

                        <TextView
                            android:id="@+id/profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/luca_alma"
                            android:textAppearance="@style/h1"
                            app:fontFamily="@font/open_sans_bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/friends"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="9dp"
                                android:text="@string/friends"
                                android:textAppearance="@style/h3"
                                app:fontFamily="@font/comfortaa" />

                            <TextView
                                android:id="@+id/friends_number"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:background="@drawable/friends_level"
                                android:gravity="center"
                                android:text="5"
                                android:textAppearance="@style/h1"
                                android:textColor="#FFFFFF"
                                app:fontFamily="@font/open_sans_bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/donations"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="9dp"
                                android:text="@string/donations"
                                android:textAppearance="@style/h3"
                                app:fontFamily="@font/comfortaa" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <TextView
                                    android:id="@+id/donation_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignLeft="@id/donation_level"
                                    android:layout_alignTop="@id/donation_level"
                                    android:layout_alignRight="@id/donation_level"
                                    android:layout_alignBottom="@id/donation_level"
                                    android:background="@drawable/ring_background"
                                    android:gravity="center"
                                    android:text="8"
                                    android:textAppearance="@style/h1"
                                    android:textColor="#56A24E"
                                    app:fontFamily="@font/open_sans_bold" />

                                <ProgressBar
                                    android:id="@+id/donation_level"
                                    style="?android:progressBarStyleHorizontal"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:progress="0"
                                    android:progressDrawable="@drawable/donation_level"
                                    android:rotation="90" />


                            </RelativeLayout>

                            <TextView
                                android:id="@+id/level_"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@id/donation_level"
                                android:layout_alignTop="@id/donation_level"
                                android:layout_alignRight="@id/donation_level"
                                android:layout_alignBottom="@id/donation_level"
                                android:layout_marginBottom="5dp"
                                android:text="@string/level_3"
                                android:textAppearance="@style/h6"
                                app:fontFamily="@font/comfortaa" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/helps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="9dp"
                                android:text="@string/helps"
                                android:textAppearance="@style/h3"
                                app:fontFamily="@font/comfortaa" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <TextView
                                    android:id="@+id/helps_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignLeft="@id/help_level"
                                    android:layout_alignTop="@id/help_level"
                                    android:layout_alignRight="@id/help_level"
                                    android:layout_alignBottom="@id/help_level"
                                    android:background="@drawable/ring_background"
                                    android:gravity="center"
                                    android:text="3"
                                    android:textAppearance="@style/h1"
                                    android:textColor="#C38209"
                                    app:fontFamily="@font/open_sans_bold" />

                                <ProgressBar
                                    android:id="@+id/help_level"
                                    style="?android:progressBarStyleHorizontal"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:progress="0"
                                    android:progressDrawable="@drawable/help_level"
                                    android:rotation="90"
                                    android:text="@string/donations" />


                            </RelativeLayout>

                            <TextView
                                android:id="@+id/level_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="@string/level_1"
                                android:textAppearance="@style/h6"
                                app:fontFamily="@font/comfortaa" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Upcoming events"
                    android:textAppearance="@style/h1"
                    app:fontFamily="@font/open_sans_bold" />

                <LinearLayout
                    android:id="@+id/upcoming_event"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:srcCompat="@drawable/elderly_event" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textAppearance="@style/h5"
                            android:text="1 JUN"
                            app:fontFamily="@font/open_sans_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textAppearance="@style/h6"
                            android:text="Helping the elderly"
                            app:fontFamily="@font/comfortaa" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="Nothing planned"
                    android:textAppearance="@style/h6"
                    app:fontFamily="@font/comfortaa" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>