<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:gravity="left"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/cookies_event" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="left"
            android:layout_gravity="left"
            android:text="Stanley Kelder"
            android:textAppearance="@style/h5"
            android:textColor="@color/primary_text"
            app:fontFamily="@font/comfortaa" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="right|center_vertical|end"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_add"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_gravity="center|center_vertical|end"
            android:background="@drawable/primary_button"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="center"
            android:onClick="addedFriend"
            android:text="+ ADD"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/icons" />
    </LinearLayout>

</LinearLayout>


